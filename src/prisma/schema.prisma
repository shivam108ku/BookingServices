generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Booking {
  id              Int      @id @default(autoincrement())
  userId          Int
  hotelId         Int
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  bookingAmount   Int
  status          BookingStatus
}

enum BookingStatus {
  PENDING
  CONFIRMED
  CANCELLED
}
